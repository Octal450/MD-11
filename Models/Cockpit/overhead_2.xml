<PropertyList>
	
	<path>overhead_2.ac</path>
	
	<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<texture>chrome_cockpit.png</texture>
		<object-name>oh.glass.2</object-name>
	</animation>
	
	<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<texture>chrome_cockpit_red.png</texture>
		<object-name>engine.fire.glass</object-name>
	</animation>
	
	<animation>
		<name>Integ Panel lighting</name>
		<type>material</type>
		<object-name>overhead.text.2</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/overhead-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<!-- No button lights without power! -->
	<animation>
		<type>select</type>
		<object-name>APUStartStop.on</object-name>
		<object-name>APUStartStop.off</object-name>
		<condition>
			<or>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-1</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-2</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-3</property>
					<value>24</value>
				</greater-than-equals>
			</or>
		</condition>
	</animation>
	
	<!-- APU -->
	<animation>
		<type>pick</type>
		<object-name>APUStartStop</object-name>
		<object-name>APUStartStop.off</object-name>
		<object-name>APUStartStop.on</object-name>
		<action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/bus/dc-bat</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>nasal</command>
				<script>systems.APU.startStop(0);</script> <!-- No auto connect -->
		    </binding>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/overhead/apu-start-stop</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn2();</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/overhead/apu-start-stop</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>APUStartStop</object-name>
		<object-name>APUStartStop.off</object-name>
		<object-name>APUStartStop.on</object-name>
		<property>controls/cockpit/overhead/apu-start-stop</property>
		<factor>-0.001</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>APUStartStop.on</object-name>
		<condition>
			<or>
				<equals>
					<property>controls/apu/lights/on</property>
					<value>1</value>
				</equals>
				<equals>
					<property>controls/switches/annun-test</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>APUStartStop.off</object-name>
		<condition>
			<or>
				<and>
					<equals>
						<property>controls/apu/switches/start</property>
						<value>0</value>
					</equals>
					<greater-than-equals>
						<property>engines/engine[3]/n2-actual</property>
						<value>2</value>
					</greater-than-equals>
				</and>
				<equals>
					<property>controls/switches/annun-test</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
	</animation>
	
	<!-- GPWS -->
	<animation>
		<type>knob</type>
		<object-name>GpwsOvrdCover</object-name>
		<property>controls/cockpit/overhead/gpws-ovrd-cover</property>
		<drag-direction>vertical</drag-direction>
		<drag-scale-px>15</drag-scale-px>
		<factor>-100</factor>
		<center>
			<x-m>-16.8084</x-m>
			<y-m>0</y-m>
			<z-m>-22.3806</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-assign</command>
				<property>controls/switches/gpws-ovrd-cover</property>
				<value>1</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<equals>
						<property>controls/switches/gpws-ovrd</property>
						<value>-1</value>
					</equals>
				</condition>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
			<binding>
				<condition>
					<equals>
						<property>controls/switches/gpws-ovrd</property>
						<value>-1</value>
					</equals>
				</condition>
				<command>property-assign</command>
				<property>controls/switches/gpws-ovrd</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/switches/gpws-ovrd-cover</property>
				<value>0</value>
			</binding>
		</decrease>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>GpwsOvrd</object-name>
		<property>controls/cockpit/overhead/gpws-ovrd</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-30</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep> 30</dep></entry>
		</interpolation>
		<center>
			<x-m>-16.8088</x-m>
			<y-m>0</y-m>
			<z-m>-22.3941</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>GpwsOvrd</object-name>
		<action>
		    <button>0</button>
		    <button>4</button>
		    <repeatable>false</repeatable>
			<binding>
				<condition>
					<not><property>controls/switches/gpws-ovrd-cover</property></not>
				</condition>
				<command>property-cycle</command>
				<property>controls/switches/gpws-ovrd</property>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<condition>
					<property>controls/switches/gpws-ovrd-cover</property>
				</condition>
				<command>property-cycle</command>
				<property>controls/switches/gpws-ovrd</property>
				<value>-1</value>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
		<action>
		    <button>1</button>
		    <button>3</button>
		    <repeatable>false</repeatable>
			<binding>
				<condition>
					<not><property>controls/switches/gpws-ovrd-cover</property></not>
				</condition>
				<command>property-cycle</command>
				<property>controls/switches/gpws-ovrd</property>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<condition>
					<property>controls/switches/gpws-ovrd-cover</property>
				</condition>
				<command>property-cycle</command>
				<property>controls/switches/gpws-ovrd</property>
				<value>1</value>
				<value>0</value>
				<value>-1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
	</animation>

</PropertyList>
