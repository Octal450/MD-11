	<animation>
		<type>material</type>
		<object-name>Display</object-name>
		<object-name>Labels</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LCD</object-name>
		<emission>
			<red>1.0</red>
			<green>0.5</green>
			<blue>0.4</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Display</object-name>
		<object-name>Lights</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/crp[1]</property>
				<value>24</value>
			</greater-than-equals>
		</condition>
	</animation>
	
	<!-- Knobs -->
	<animation>
		<type>knob</type>
		<object-name>Dec.knob</object-name>
		<property>instrumentation/crp[1]/minor-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0.02005</x-m>
			<y-m>0.03467</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<increase>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[1].adjustDec(1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[1].adjustDec(-1);</script>
			</binding>
		</decrease>
		<shift-increase>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[1].adjustDec(1, 1);</script>
			</binding>
		</shift-increase>
		<shift-decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.crp[1].adjustDec(-1, 1);</script>
			</binding>
		</shift-decrease>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/crp[1]/minor-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Int.knob</object-name>
		<property>instrumentation/crp[1]/major-rotate</property>
		<factor>-11.25</factor>
