<PropertyList>
	
	<path>res/ND1.ac</path>
	
	<animation>
		<type>pick</type>
		<object-name>ND.screenL</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>libraries.showNd();</script>
			</binding>
		</action>
	</animation>
	
	<effect>
		<inherits-from>Aircraft/MD-11/Models/Effects/displays/lcd</inherits-from>
		<parameters>
			<inner-angle>90</inner-angle> <!-- 0-90, use 90 for LED or plasma display-->
			<outer-angle>90</outer-angle> <!-- 0-90, but greater than inner -->
			<black-angle>90</black-angle> <!-- 0-90, but greater than outer -->
			<dirt-factor>0</dirt-factor>
			<contrast><use>instrumentation/du/crt-contrast</use></contrast>
		</parameters>
		<object-name>ND.screenL</object-name>
		<object-name>ND.offL</object-name>
		<object-name>ND.borderL</object-name>
	</effect>
	
	<animation>
		<type>select</type>
		<object-name>ND.screenL</object-name>
		<condition>
			<equals>
				<property>instrumentation/nd/show-nd1</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>ND.offL</object-name>
		<condition>
			<not-equals>
				<property>instrumentation/nd/show-nd1</property>
				<value>1</value>
			</not-equals>
		</condition>
	</animation>

</PropertyList>
