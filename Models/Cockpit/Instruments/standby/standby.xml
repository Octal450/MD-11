	<!-- Controls -->
	<animation> <!-- Reuse the IESI's property -->
		<type>knob</type>
		<object-name>Baro.knob</object-name>
		<property>controls/cockpit/iesi-baro-rotate</property>
		<factor>-11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-0.07441</y-m>
			<z-m>-0.02797</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<factor>0.01</factor>
				<min>26</min>
				<max>33</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/iesi-baro-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
