<PropertyList>
	
	<path>standby.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<!-- Airspeed -->
	<animation>
		<type>rotate</type>
		<object-name>IAS.dial</object-name>
		<property>instrumentation/stby-combo/speed-kt</property>
		<interpolation>
			<entry><ind> 52</ind><dep>  0.00</dep></entry>
			<entry><ind> 60</ind><dep>  8.45</dep></entry>
			<entry><ind>100</ind><dep> 50.75</dep></entry>
			<entry><ind>150</ind><dep>103.70</dep></entry>
			<entry><ind>200</ind><dep>156.80</dep></entry>
			<entry><ind>250</ind><dep>209.90</dep></entry>
			<entry><ind>300</ind><dep>240.50</dep></entry>
			<entry><ind>350</ind><dep>271.10</dep></entry>
			<entry><ind>400</ind><dep>301.65</dep></entry>
			<entry><ind>450</ind><dep>332.15</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
		<center>
			<x-m>-0.03087</x-m>
			<y-m>-0.04646</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
