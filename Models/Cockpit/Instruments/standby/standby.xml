	<!-- Slip Skid -->
	<animation>
		<type>translate</type>
		<object-name>Slip.ball</object-name>
		<property>instrumentation/pfd/slip-skid</property>
		<interpolation>
			<entry><ind>-15</ind><dep>-0.006</dep></entry>
			<entry><ind>  0</ind><dep> 00000</dep></entry>
