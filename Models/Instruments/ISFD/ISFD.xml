<PropertyList>
	
	<path>ISFD.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>systems/lighting/main-integ</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>LightingGroup</object-name>
	</effect>
	
	<animation>
		<type>pick</type>
		<object-name>isfd.screen</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_isfd.showIsfd();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>HpIn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<property>systems/electrical/bus/dc-bat</property>
				</condition>
				<command>property-toggle</command>
				<property>instrumentation/altimeter/inhg</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/isfd-hpin</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/isfd-hpin</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>HpIn</object-name>
		<object-name>HpIn.text</object-name>
		<property>controls/cockpit/isfd-hpin</property>
		<factor>0.0005</factor>
		<axis>
			<x1-m>-27.4417</x1-m>
			<y1-m>0.06021</y1-m>
			<z1-m>6.7264</z1-m>
			<x2-m>-27.4421</x2-m>
			<y2-m>0.06021</y2-m>
			<z2-m>6.72624</z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>BaroSet</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<property>systems/electrical/bus/dc-bat</property>
				</condition>
				<command>nasal</command>
				<script>cockpit.Baro.std();</script>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/isfd-baro-translate</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/isfd-baro-translate</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<and>
						<greater-than-equals>
							<property>systems/electrical/bus/dc-bat</property>
							<value>24</value>
						</greater-than-equals>
						<not><property>devices/status/keyboard/shift</property></not>
					</and>
				</condition>
				<command>nasal</command>
				<script>cockpit.Baro.adjust(1);</script>
			</binding>
			<binding>
				<condition>
					<and>
						<greater-than-equals>
							<property>systems/electrical/bus/dc-bat</property>
							<value>24</value>
						</greater-than-equals>
						<property>devices/status/keyboard/shift</property>
					</and>
				</condition>
				<command>nasal</command>
				<script>cockpit.Baro.adjust(10);</script>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/isfd-baro-rotate</property>
				<step>1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<and>
						<greater-than-equals>
							<property>systems/electrical/bus/dc-bat</property>
							<value>24</value>
						</greater-than-equals>
						<not><property>devices/status/keyboard/shift</property></not>
					</and>
				</condition>
				<command>nasal</command>
				<script>cockpit.Baro.adjust(-1);</script>
			</binding>
			<binding>
				<condition>
					<and>
						<greater-than-equals>
							<property>systems/electrical/bus/dc-bat</property>
							<value>24</value>
						</greater-than-equals>
						<property>devices/status/keyboard/shift</property>
					</and>
				</condition>
				<command>nasal</command>
				<script>cockpit.Baro.adjust(-10);</script>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/isfd-baro-rotate</property>
				<step>-1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>BaroSet</object-name>
		<object-name>BaroSet.text</object-name>
		<property>controls/cockpit/isfd-baro-translate</property>
		<factor>0.002</factor>
		<axis>
			<x1-m>-27.4417</x1-m>
			<y1-m>0.06468</y1-m>
			<z1-m>6.7264</z1-m>
			<x2-m>-27.4421</x2-m>
			<y2-m>0.06468</y2-m>
			<z2-m>6.72624</z2-m>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>BaroSet</object-name>
		<object-name>BaroSet.text</object-name>
		<property>controls/cockpit/isfd-baro-rotate</property>
		<factor>11.25</factor>
		<axis>
			<x1-m>-27.4415</x1-m>
			<y1-m>0.06468</y1-m>
			<z1-m>6.72647</z1-m>
			<x2-m>-27.4541</x2-m>
			<y2-m>0.06468</y2-m>
			<z2-m>6.72179</z2-m>
		</axis>
	</animation>
	
	<effect>
		<inherits-from>Aircraft/MD-11/Models/Effects/DU/lcd</inherits-from>
		<parameters>
			<inner-angle>90</inner-angle> <!-- 0-90, use 90 for LED or plasma display-->
			<outer-angle>90</outer-angle> <!-- 0-90, but greater than inner -->
			<black-angle>90</black-angle> <!-- 0-90, but greater than outer -->
			<dirt-factor>0</dirt-factor>
			<contrast><use>instrumentation/isfd/lcd-contrast</use></contrast>
		</parameters>
		<object-name>isfd.screen</object-name>
	</effect>

</PropertyList>
