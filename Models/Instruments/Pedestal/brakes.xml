<PropertyList>
	
	<path>brakes.ac</path>
	
	<animation>
		<name>Panel lighting</name>
		<type>material</type>
		<object-name>brake.text</object-name>
		<object-name>brake.text.underglass</object-name>
		<object-name>Abrake.001</object-name>
		<object-name>needle.1</object-name>
		<object-name>needle.2</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>systems/lighting/main-integ</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>brake.text</object-name>
		<object-name>Abrake.001</object-name>
	</effect>
	
	<animation>
		<type>knob</type>
		<object-name>AutoBrake.knob</object-name>
		<object-name>Abrake.001</object-name>
		<property>controls/cockpit/abs-knob</property>
		<drag-scale-px>15</drag-scale-px>
		<interpolation>
			<entry><ind>-1</ind><dep>-45</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 1</ind><dep> 45</dep></entry>
			<entry><ind> 2</ind><dep> 90</dep></entry>
			<entry><ind> 3</ind><dep>135</dep></entry>
		</interpolation>
		<center>
			<x-m>0.00657</x-m>
			<y-m>0.02222</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/abs/knob</property>
				<factor>1</factor>
				<min>-1</min>
				<max>3</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.knb1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>needle.1</object-name>
		<object-name>needle.3</object-name>
		<property>systems/hydraulics/brakes/sys-1-psi-needle</property>
		<interpolation>
			<entry><ind>   0</ind><dep>  0</dep></entry>
			<entry><ind>4000</ind><dep>240</dep></entry>
		</interpolation>
		<center>
			<x-m>0.00</x-m>
			<y-m>-0.0694</y-m>
			<z-m>0.0052</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>needle.2</object-name>
		<property>systems/hydraulics/brakes/sys-2-psi-needle</property>
		<interpolation>
			<entry><ind>   0</ind><dep>  0</dep></entry>
			<entry><ind>4000</ind><dep>240</dep></entry>
		</interpolation>
		<center>
			<x-m>0.00</x-m>
			<y-m>-0.0694</y-m>
			<z-m>0.0052</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>AutoBrake.knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<binding>
				<command>property-adjust</command>
				<property>controls/abs/knob</property>
				<step>1</step>
				<min>-1</min>
				<max>3</max>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.knb1();</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<binding>
				<command>property-adjust</command>
				<property>controls/abs/knob</property>
				<step>-1</step>
				<min>-1</min>
				<max>3</max>
			</binding>
		</action>
	</animation>
	
	<!-- No button lights without power! -->
	<animation>
		<type>select</type>
		<object-name>AuxPump1.on</object-name>
		<condition>
			<or>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-1</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-2</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-3</property>
					<value>24</value>
				</greater-than-equals>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>AuxPump1</object-name>
		<object-name>AuxPump1.on</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/bus/dc-bat</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-toggle</command>
				<property>controls/hydraulics/aux-pump-1</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/aux-pump-1</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn2();</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/aux-pump-1</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>AuxPump1</object-name>
		<object-name>AuxPump1.on</object-name>
		<property>controls/cockpit/aux-pump-1</property>
		<factor>-0.001</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>AuxPump1.on</object-name>
		<condition>
			<and>
				<or>
					<equals>
						<property>controls/hydraulics/aux-pump-1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>controls/switches/annun-test</property>
						<value>1</value>
					</equals>
				</or>
			</and>
		</condition>
	</animation>

</PropertyList>
