<PropertyList>
 <path>stby-ai.ac</path>
 
        <animation>
  <type>scale</type>
  <x-offset>0.90</x-offset>
  <y-offset>0.90</y-offset>
  <z-offset>0.90</z-offset>
 </animation>

 <animation>
        <type>rotate</type>
        <object-name>Roll.needle</object-name>
        <object-name>Slip.needle</object-name>
        <property>orientation/roll-deg</property>
        <center>
            <x-m>0.002</x-m>
            <y-m>-0.011</y-m>
            <z-m>0.009</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Slip.needle</object-name>
        <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <factor>0.0020</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>FDroll_rembrandt</object-name>
        <object-name>FDpitch_rembrandt</object-name>
        <condition>
			<property>sim/rendering/rembrandt/enabled</property>
            <or>
                <property>instrumentation/afds/inputs/FD</property>
                <property>instrumentation/afds/settings/auto-pop-up</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>FDroll</object-name>
        <object-name>FDpitch</object-name>
        <condition>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
            <or>
                <property>instrumentation/afds/inputs/FD</property>
                <property>instrumentation/afds/settings/auto-pop-up</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDpitch</object-name>
        <object-name>FDpitch_rembrandt</object-name>
        <property>autopilot/internal/target-pitch-deg</property>
        <factor>0.00148</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDpitch</object-name>
        <object-name>FDpitch_rembrandt</object-name>
        <property>orientation/pitch-deg</property>
        <factor>0.00148</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDroll</object-name>
        <object-name>FDroll_rembrandt</object-name>
        <property>autopilot/internal/target-roll-deg</property>
        <factor>0.00079</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDroll</object-name>
        <object-name>FDroll_rembrandt</object-name>
        <property>orientation/roll-deg</property>
        <factor>0.00079</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

 <animation>
   <type>texmultiple</type>
   <object-name>AI</object-name>
   <transform>
     <property>orientation/pitch-deg</property>
     <subtype>textranslate</subtype>
     <factor>0.00435</factor>
     <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
     </axis>
   </transform>
   <transform>
     <property>orientation/roll-deg</property>
     <subtype>texrotate</subtype>
     <center>
       <x>0.25</x>
       <y>0.50</y>
     </center>
     <axis>
       <x>0</x>
       <y>0</y>
       <z>-1</z>
     </axis>
   </transform>

 </animation>

    <animation>
        <type>select</type>
        <object-name>StbyAI.screenoff</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

</PropertyList>
