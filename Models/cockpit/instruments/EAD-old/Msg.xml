<PropertyList>
    <name>EICAS messages</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>

    <layer>
        <name>warning messages</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>15</point-size>
        <color>
            <red>0.9</red>
            <green>0</green>
            <blue>0</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>instrumentation/eicas/msg/warning</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-115</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>106</offset>
            </transformation>
        </transformations>
    </layer>
	
	<layer>
        <name>caution messages</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>15</point-size>
        <color>
            <red>0.8</red>
            <green>0.4</green>
            <blue>0</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>instrumentation/eicas/msg/caution</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-115</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>106</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>advisory messages</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>15</point-size>
        <color>
            <red>0.8</red>
            <green>0.4</green>
            <blue>0</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>instrumentation/eicas/msg/advisory</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-115</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>106</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>memo messages</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>15</point-size>
