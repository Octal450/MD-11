                <property>instrumentation/eicas/msg/memo</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-115</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>106</offset>
            </transformation>
        </transformations>
    </layer>

    </layers>

</PropertyList>
