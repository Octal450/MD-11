<PropertyList>
	
	<path>cockpit_seat.ac</path>
	
	<effect>
		<inherits-from>Aircraft/IDG-MD-11/Models/Effects/bumpspec-seat</inherits-from>
		<object-name>cushion</object-name>
		<object-name>windshield.frames</object-name>
	</effect>
	
	<animation>
		<type>rotate</type>
		<object-name>armrest.left</object-name>
		<object-name>armrest.right</object-name>
		<property>sim/model/armrest-rotate</property>
		<interpolation>
			<entry><ind>1.0</ind><dep> 0</dep></entry>
			<entry><ind>0.2</ind><dep>96</dep></entry>
		</interpolation>
		<center>
			<x-m>0.1747</x-m>
			<y-m>0</y-m>
			<z-m>0.439</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>armrest.left</object-name>
		<property>sim/model/armrest-translate</property>
		<interpolation>
			<entry><ind>0.2</ind><dep>0.000</dep></entry>
			<entry><ind>0.0</ind><dep>0.016</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>armrest.right</object-name>
		<property>sim/model/armrest-translate</property>
		<interpolation>
			<entry><ind>0.2</ind><dep>0.000</dep></entry>
			<entry><ind>0.0</ind><dep>0.016</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>armrest.left</object-name>
		<object-name>armrest.right</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>sim/model/armrest</property>
			</binding>
		</action>
	</animation>

</PropertyList>
