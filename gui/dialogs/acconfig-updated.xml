<PropertyList>

	<name>acconfig-updated</name>
	<layout>vbox</layout>
	
	<group>
		<layout>hbox</layout>
		
		<text>
			<halign>left</halign>
			<label>Welcome!</label>
		</text>
		
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>vbox</layout>
		
		<text>
			<halign>left</halign>
			<label>Aircraft Config Center has detected that your aircraft was installed for the first time or updated successfully!</label>
		</text>
		
		<group>
			<layout>hbox</layout>
			<halign>left</halign>
			
			<text>
				<halign>left</halign>
				<label>Installed version:</label>
			</text>
			
			<text>
				<halign>left</halign>
				<border>1</border>
				<label>99999</label>
				<property>/systems/acconfig/revision</property>
				<live>1</live>
			</text>
		</group>
		
		<text>
			<halign>left</halign>
			<label>Some aircraft settings may have been returned to their defaults.</label>
		</text>
	</group>
	
	<hrule/>

	<group>
		<layout>hbox</layout>
		
		<button>
			<halign>center</halign>
			<legend>Continue</legend>
			<pref-width>350</pref-width>
			<binding>
				<command>nasal</command>
				<script>
					if (getprop("/systems/acconfig/options/welcome-skip") != 1) {
						fgcommand("dialog-show", props.Node.new({"dialog-name": "acconfig-welcome"}));
					}
				</script>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
</PropertyList>
