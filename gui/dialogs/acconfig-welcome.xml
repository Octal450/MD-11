<!-- MD-11 Aircraft Config Dialog -->

<PropertyList>

	<name>acconfig-welcome</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
		
        <text>
            <halign>left</halign>
            <label>Welcome!</label>
        </text>
		
		<empty><stretch>1</stretch></empty>
		
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>?</legend>
			<binding>
				<command>dialog-show</command>
				<dialog-name>acconfig-help</dialog-name>
			</binding>
		</button>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<group>
		<layout>vbox</layout>
		
		<text>
			<halign>center</halign>
			<label>Welcome to the MD-11!</label>
		</text>
		<text>
			<halign>center</halign>
			<label>This is a complex simulation of these amazing McDonnell Douglas Aircraft.</label>
		</text>
		<text>
			<halign>center</halign>
			<label>Use Aircraft Config to select livery, manage panel states, and more!</label>
		</text>
		<text>
			<halign>center</halign>
			<label>Report bugs on GitHub.</label>
		</text>
		
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
	
		<checkbox>
			<label>Do not show this screen at FlightGear startup</label>
			<halign>center</halign>
			<property>/systems/acconfig/options/welcome-skip</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>nasal</command>
				<script>acconfig.OPTIONS.write();</script>
			</binding>
			<live>true</live>
		</checkbox>
		
	</group>
	
	<hrule/>

	<group>
		<layout>hbox</layout>
		
		<button>
			<halign>center</halign>
			<legend>Aircraft Config</legend>
			<pref-width>210</pref-width>
			<binding>
				<command>dialog-show</command>
				<dialog-name>acconfig-main</dialog-name>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		<button>
			<halign>center</halign>
			<legend>Go Away</legend>
			<pref-width>210</pref-width>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
</PropertyList>
