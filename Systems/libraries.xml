<PropertyList>

	<filter>
		<name>Wingflex</name>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<equals>
					<property>/aircraft/wingflex-enable</property>
					<value>1</value>
				</equals>
			</condition>
		</enable>
		<input>/fdm/jsbsim/aero/force/Lift_alpha</input>
		<output>/aircraft/wingflex</output>
	</filter>
	
	<filter>
		<name>OAT Thrust Scale</name>
		<type>gain</type>
		<gain>1</gain>
		<update-interval-secs type="double">0.05</update-interval-secs>
		<input> 
			<expression>
				<table>
					<property>/environment/temperature-degc</property>
					<entry><ind> 70</ind><dep>0.790</dep></entry>
					<entry><ind> 40</ind><dep>0.815</dep></entry>
					<entry><ind>-60</ind><dep>1.000</dep></entry>
				</table>
			</expression>
		</input>
		<output>/controls/engines/throttle-scale</output>
	</filter>
	
