<PropertyList>

	<name>ground_services</name>
	<layout>vbox</layout>

	<text>
		<label>Ground Services Controls</label>
	</text>

	<hrule />
		
	<checkbox>
		<halign>left</halign>
		<label>Enable Primary External Power</label>
		<property>controls/electric/external-power</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	<checkbox>
		<halign>left</halign>
		<label>Enable Secondary External Power</label>
		<property>controls/electric/external-power[1]</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	<checkbox>
		<halign>left</halign>
		<label>Enable External Compressed Air</label>
		<property>systems/pneumatics/air-service</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	<hrule />
		
	<group>
	    <layout>hbox</layout>
	    <group>
		<layout>vbox</layout>
		<checkbox>
		    <label>L1 Stairs</label>
		    <property>services/stairs/l1</property>
		    <binding>
			<command>dialog-apply</command>
		    </binding>
		    <live>true</live>
		</checkbox>
		<checkbox>
		    <label>L2 Stairs</label>
		    <property>services/stairs/l2</property>
		    <binding>
			<command>dialog-apply</command>
		    </binding>
		    <live>true</live>
		</checkbox>
		<checkbox>
		    <label>L3 Stairs</label>
		    <property>services/stairs/l4</property>
		    <binding>
			<command>dialog-apply</command>
		    </binding>
		    <live>true</live>
		</checkbox>
	    </group>
	    <group>
		<layout>vbox</layout>
		<checkbox>
		    <label>R1 Stairs</label>
		    <property>services/stairs/l1_2</property>
		    <binding>
			<command>dialog-apply</command>
		    </binding>
		    <live>true</live>
		</checkbox>
		<checkbox>
		    <label>R2 Stairs</label>
		    <property>services/stairs/l2_2</property>
		    <binding>
			<command>dialog-apply</command>
	 	    </binding>
		    <live>true</live>
		</checkbox>
		<checkbox>
		    <label>R3 Stairs</label>
		    <property>services/stairs/l4_2</property>
		    <binding>
			<command>dialog-apply</command>
		    </binding>
		    <live>true</live>
		</checkbox>
	    </group>
	</group>
	
	<hrule />
	
	<group>
	<layout>hbox</layout>

		<button>
			<legend>Close</legend>
			<default>true</default>
			<key>Esc</key>
		<padding>5</padding>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		
	</group>

</PropertyList>
