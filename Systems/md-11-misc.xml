					</tableData>
				</table>
			</function>
		</fcs_function>
		
		<fcs_function name="/controls/lighting/main-osg-blue">
			<function>
				<table>
					<independentVar lookup="row">/controls/lighting/main-integ-norm</independentVar>
					<tableData>
						0  0.1
						1  0.7
