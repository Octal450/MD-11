			</test>
		</switch>
		
		<switch name="/systems/iru[2]/align-cmd">
			<default value="0"/>
			<test logic="AND" value="0"> <!-- Cancel align if not aligned and can't align -->
				/systems/iru[2]/aligned ne 1
