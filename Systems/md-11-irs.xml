		</switch>
		
		<switch name="/systems/iru[2]/att-avail">
			<default value="0"/>
			<test value="1">
				/systems/iru[2]/aligned eq 1
			</test>
			<test logic="AND" value="1">
				/systems/iru[2]/align-timer ge 30
				/systems/iru[2]/aligning eq 1
			</test>
		</switch>
		
		<switch name="/systems/iru[2]/main-avail">
			<default value="0"/>
			<test value="1">
				/systems/iru[2]/aligned eq 1
			</test>
			<test logic="AND" value="1">
				/systems/iru[2]/align-timer ge 300
				/systems/iru[2]/aligning eq 1
			</test>
		</switch>
	
	</channel>
	
	<channel name="More Logic" execrate="8">
		
		<switch name="/systems/iru-common/any-aligned">
			<default value="0"/>
			<test logic="OR" value="1">
				/systems/iru[0]/aligned eq 1
				/systems/iru[1]/aligned eq 1
				/systems/iru[2]/aligned eq 1
			</test>
			<output>/systems/iru-common/any-aligned-out</output>
		</switch>
		
		<switch name="/systems/iru-common/all-aligned">
			<default value="0"/>
			<test logic="AND" value="1">
				/systems/iru[0]/aligned eq 1
				/systems/iru[1]/aligned eq 1
				/systems/iru[2]/aligned eq 1
			</test>
			<output>/systems/iru-common/all-aligned-out</output>
		</switch>
		
		<switch name="/systems/iru-common/align-mcdu-msg-fms-1">
			<default value="0"/>
			<test value="0">
				/systems/fms/internal/fms-1-avail-feedback eq 0
			</test>
			<test logic="OR" value="1">
				/systems/iru[0]/align-mcdu-msg eq 1
				/systems/iru[1]/align-mcdu-msg eq 1
				/systems/iru[2]/align-mcdu-msg eq 1
			</test>
			<output>/systems/iru-common/align-mcdu-msg-fms-1-out</output>
		</switch>
		
		<switch name="/systems/iru-common/align-mcdu-msg-fms-2">
			<default value="0"/>
			<test value="0">
				/systems/fms/internal/fms-2-avail-feedback eq 0
