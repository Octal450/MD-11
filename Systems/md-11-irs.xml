			</test>
		</switch>
		
		<switch name="/systems/iru[2]/align-mcdu-msg">
			<default value="0"/>
			<test logic="AND" value="1">
				/controls/iru[2]/knob eq 1
				/systems/iru[2]/powered eq 1
			</test>
		</switch>
		
		<pure_gain name="/systems/iru[2]/align-timer-input">
			<input>/systems/iru[2]/align-cmd</input>
