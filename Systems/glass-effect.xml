<system name="glass-effect">
	
	<channel name="Rain" execrate="2">
		
		<fcs_function name="glass-effects/splashx">
			<function>
				<table>
					<independentVar lookup="row">velocities/u-aero-fps</independentVar>
					<tableData>
						  0  0.01
						  7  0.01
						  8 -0.01
						 25 -0.50
						 50 -1.20
						120 -2.00
					</tableData>
				</table>
			</function>
			<output>/environment/aircraft-effects/splash-vector-x</output>
		</fcs_function>
		
		<fcs_function name="glass-effects/splashy">
			<function>
				<table>
					<independentVar lookup="row">velocities/v-aero-fps</independentVar>
					<tableData>
						-25 -0.5
						 -8  0.0
						  8  0.0
						 25  0.5
					</tableData>
				</table>
			</function>
			<output>/environment/aircraft-effects/splash-vector-y</output>
		</fcs_function>
		
		<fcs_function name="glass-effects/splashz">
			<function>
				<table>
					<independentVar lookup="row">velocities/u-aero-fps</independentVar>
					<tableData>
						  0  1.2
						  7  1.2
						  8  0.9
						 25  0.9
						 50 -0.2
						120 -0.5
					</tableData>
				</table>
			</function>
			<output>/environment/aircraft-effects/splash-vector-z</output>
		</fcs_function>
	
	</channel>

</system>
